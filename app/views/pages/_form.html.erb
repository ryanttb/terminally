<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= image_tag 'characters.png', id: 'characters' %>

  <%= f.hidden_field :cache_text %>
  <%= f.hidden_field :cache_image %>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
    <%= f.button 'Get', type: 'button' %>
  </div>
  <div class="field">
    <%= image_tag @page.cache_image, class: 'cache-image' %>
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 48, cols: 64 %>
  </div>
  <div class="actions">
    <%= f.button 'Update Cache', type: 'button' %>
  </div>
  <div class="actions">
    <%= f.submit 'Save Page', id: 'page_submit' %>
  </div>
<% end %>
